<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net48</TargetFramework>
		<UseWPF>true</UseWPF>
		<LangVersion>10.0</LangVersion>
		<PackageOutputPath>D:\OUTPUT</PackageOutputPath>
		<AssemblyName>ExportCADX</AssemblyName>
		<BaseOutputPath>D:\OUTPUT</BaseOutputPath>
	</PropertyGroup>

	

	<ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="MaterialDesignColors" Version="5.2.1" />
    <PackageReference Include="MaterialDesignThemes" Version="5.2.1" />
    <PackageReference Include="netDxf" Version="2023.11.10" />
    <PackageReference Include="Revit_All_Main_Versions_API_x64" Version="2024.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(TargetDir)*&quot; &quot;$(AppData)\Autodesk\Revit\Addins\2024\&quot;" />
  </Target>

</Project>
