<Window
    x:Class="ExportCADX.Views.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:ExportCADX.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExportCADX.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExportCADX"
    Width="450"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!--  GroupBox 1: Export Type  -->
        <GroupBox
            Grid.Row="0"
            Header="Choose Exporting File Type"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <StackPanel Margin="10">
                <ComboBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Exporting Type"
                    ItemsSource="{Binding ExportingType}"
                    SelectedItem="{Binding SelectedViewType}"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                <CheckBox Content="Export to Folder" IsChecked="{Binding IsExportEnabled}" />

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        materialDesign:HintAssist.Hint="Folder Path"
                        IsEnabled="{Binding IsExportEnabled}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding ExportFolderPath}" />

                    <Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Bottom"
                        Command="{Binding BrowseFolderCommand}"
                        Content=".."
                        IsEnabled="{Binding IsExportEnabled}"
                        ToolTip="Browse For Folder" />


                </Grid>


            </StackPanel>



        </GroupBox>


        <!--  GroupBox 2: File Format Input  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,15,0,0"
            Header="File Format"
            Style="{StaticResource MaterialDesignCardGroupBox}">

            <StackPanel
                Margin="10"
                HorizontalAlignment="Left"
                Orientation="Horizontal">

                <!--  Bind directly to the boolean properties  -->

                <RadioButton
                    Content=" Export DXF"
                    GroupName="FileFormat"
                    IsChecked="{Binding IsDxfExport}" />

                <RadioButton
                    Margin="20,0,0,0"
                    Content="Export DWG"
                    GroupName="FileFormat"
                    IsChecked="{Binding IsDwgExport}" />

                <RadioButton
                    Margin="40,0,0,0"
                    Content="Export XML"
                    GroupName="FileFormat"
                    IsChecked="{Binding IsXMLExport}" />

            </StackPanel>



        </GroupBox>



        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                Width="100"
                Command="{Binding OkCommand}"
                Content="OK"
                IsDefault="True"
                Style="{StaticResource MaterialDesignRaisedButton}" />

            <Button
                Width="100"
                Margin="10,0,0,0"
                Content="Cancel"
                IsCancel="True"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                
                
                />


        </StackPanel>




    </Grid>


</Window>
